<h4>UPDATE YOUR PROFILE:</h4><br/>

welcome... <%= current_user.email %><br/><br/>

 <%= form_for @userdetail, :html => {:multipart => true}, method: "put" do |f| %>
	<% if @userdetail.errors.any? %>
		<div class="alert alert-error">
			<%= @userdetail.errors.full_messages.join("<br/>").html_safe %>
		</div>
	<% end %>

	<div class="row-fluid">	
		
		<%= f.label :firstname, "FIRST NAME:" %>
		<%= f.text_field :firstname, class: "span3", placeholder: "First Name" %><br/>
		
		<%= f.label :lastname, "LAST NAME:" %>
		<%= f.text_field :lastname, class: "span3", placeholder: "Last Name" %><br/>
		
		<%= f.label :gender, "GENDER:" %>
		<%= select(:userdetail, :gender, %w[Male Female], {:prompt => "Select gender"}, :class => "span3") %>
		
		<%= f.label :image, "PROFILE IMAGE:" %>
		<%= f.file_field :image %><br/>

		
		<%= f.label :city, "CITY:" %>
		<%= f.text_field :city, class: "span3", placeholder: "Current Location / City" %><br/>
		
		<%= f.label :country, "COUNTRY:" %>
		<%= country_select(:userdetail, :country, "select country") %><br/>

		<%= f.label :zipcode, "ZIP CODE:" %>
		<%= f.text_field :zipcode, class: "span3", placeholder: "zip_code" %><br/>
		
		<%= f.label :birthyear, "YEAR OF BIRTH (e.g. 1980):" %>
		<%= f.text_field :birthyear, class: "span3", placeholder: "e.g. 1980" %><br/>
	
		<%= f.submit "Update your profile!", class: "btn btn-large btn-primary" %>
	</div>	
<% end %>


  		
